    {
      "name": "POST - Create Resource (valid DTO)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "x-role",
            "value": "Admin"
          }
