        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Solar Panel Kit\",\n  \"description\": \"Complete home solar energy system\",\n  \"category\": \"Energie\",\n  \"price\": 450,\n  \"referenceUrl\": \"https://example.com/solar\"\n}"
        },
        "url": "http://localhost:3000/admin/resources/create"
      }
    },
